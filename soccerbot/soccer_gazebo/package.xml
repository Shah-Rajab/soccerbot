<?xml version="1.0"?>
<package format="2">
  <name>soccer_gazebo</name>
  <version>0.1.0</version>
  <description>Provides Gazebo launch files to expose nubot model in ROS</description>
  <maintainer email="jiashen.wang@mail.utoronto.ca">Jason Wang</maintainer>
  <license>BSD</license>
  <author email="jiashen.wang@mail.utoronto.ca">Jason Wang</author>

  <buildtool_depend>catkin</buildtool_depend>  
  
  <depend>gazebo_ros</depend>
  <depend>rospy</depend>
  <depend>gazebo_ros_control</depend>
  <depend>sensor_msgs</depend>
  <depend>roscpp</depend>
  <depend>dynamic_reconfigure</depend>
  <depend>std_msgs</depend>
  <depend>soccer_description</depend>
  <depend>soccer_control</depend>
  <depend>soccer_hardware</depend>

  <export>
    <gazebo_ros gazebo_plugin_path="${prefix}/lib" gazebo_model_path="${prefix}/models" gazebo_media_path="${prefix}/.." />
  </export>
</package>
